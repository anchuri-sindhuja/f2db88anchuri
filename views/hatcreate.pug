        label.hatAttr(for='hat_color') hat_color
        input#hat_color(type='text', name='hat_color ') 
    div.form-group 
        label.hatAttr(for='hat_type') hat_type 
        input#hat_type(type='number', name='dishPrice', step='hat_type ') 
